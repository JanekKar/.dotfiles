# alias nvim="~/bin/nvim-linux-x86_64/bin/nvim"
alias vim="nvim"

alias vimconfig="cd $HOME/.config/nvim && nvim . && cd -"
alias zshconfig="nvim ~/.zshrc"
alias config='cd ~/.dotfiles'

alias mv='mv -i'
alias rm='rm -i'

alias open="xdg-open"
alias ls='eza -al --color=always --group-directories-first --icons' # preferred listing
alias ll='eza -al --color=always --group-directories-first --icons'  # all files and dirs
alias l='eza -l --color=always --group-directories-first --icons'  # long format
alias lt='eza -aT --color=always --group-directories-first --icons' # tree listing
alias l.="eza -a | grep -e '^\.'"                                     # show only dotfiles

alias gp="git push"
alias gl="git pull"

alias httpserver="python -m http.server 8000"
